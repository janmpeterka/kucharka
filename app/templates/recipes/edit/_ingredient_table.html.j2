<turbo-frame id="recipe-{{recipe.id}}-ingredient-table">
<table class="table" id="recipe-ingredient-table">
    <thead>
        <tr>
            <th style="width:20%"> název </th>
            <th style="width:20%"> množství <em>(na {{ recipe.portion_count }} porcí)</em> </th>
            <th> poznámky </th>
            <th style="width:20%"></th>
        </tr>
    </thead>
    <tbody id="ingredients">
    {% for ingredient in recipe.ingredients: %}
        {% if editing_id == ingredient.id %}
            {% with editing=True %}
                {% include "recipes/edit/ingredient/_row.html.j2" %}
            {% endwith %}
            {% include "recipes/edit/ingredient/_edit.html.j2" %}
        {% else %}
            {% include "recipes/edit/ingredient/_row.html.j2" %}
        {% endif %}
    {% endfor %}
    </tbody>
</table>
</turbo-frame>