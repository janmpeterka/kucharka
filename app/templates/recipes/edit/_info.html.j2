{% from "macros/render_field.html.j2" import render_field %}

<div id="recipe-info">
    <form action="{{ url_for('EditRecipeView:post', recipe_id=recipe.id) }}" method="post" accept-charset="utf-8">
        {{ form.csrf_token }}

        <div class="form-floating">
            {{ render_field(form.name, has_label=False) }}
            {{ form.name.label }}
        </div>

        <div class="form-floating">
            {{ render_field(form.category, has_label=False) }}
            {{ form.category.label }}
        </div>

        <div class="form-floating">
            {{ render_field(form.portion_count, has_label=False) }}
            {{ form.portion_count.label }}
        </div>

        <div data-controller="enable-select2">
            {{ form.labels.label(class_="me-1") }}
            {{ render_field(form.labels, has_label=False, data_enable_select2_target="select", style="width:70%;") }}
        </div>

        <div class="mt-4 pb-2">
            <input type="submit" value="{{ texts.recipe_edit }}" class="btn btn-warning">
            <span class="float-end me-5 color-success">{{ message }}</span>
        </div>
    </form>
</div>