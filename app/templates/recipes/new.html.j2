{% extends "base/base.html.j2" %}
{% block title %}
    Vytvořit recept
{% endblock %}

{% block script %}
    {% include 'javascript/stimulus.js.html' %}
    {% include 'javascript/simple_calculator_controller.js.html' %}
{% endblock %}

{% block content %}
<div data-controller="simple-calculator">
    <div class="hidden">
        <select data-simple-calculator-target="baseSelect">
            {% include "recipes/_add_ingredient_form_options.html.j2" %}
        </select>
    </div>

    <div class="col">
        <div>
            <form class="form-inline" data-action="submit->simple-calculator#add_ingredient">
                <select class="form-control" id="ingredient_select" data-simple-calculator-target="select">
                    {% include "recipes/_add_ingredient_form_options.html.j2" %}
                </select>

                <input type="submit" class="btn btn-primary" value="Přidat surovinu" />
            </form>
        </div>

        <div>
            <table class="table">
                <thead>
                    <th>{{ texts.title }}</th>
                    {# <th>{{ texts.energy_100 }}</th> #}
                    {# <th>{{ texts.protein_100 }}</th> #}
                    {# <th>{{ texts.fat_100 }}</th> #}
                    {# <th>{{ texts.sugar_100}}</th> #}
                    <th> Množství</th>
                </thead>
                <tbody data-simple-calculator-target="ingredientTable">
                </tbody>
            </table>

            <div class="col-12">
                {% include "recipes/_new_recipe_form.html.j2" %}
            </div>

        </div>

    </div>
</div>
{% endblock %}