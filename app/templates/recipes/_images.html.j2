<details class="colored">
    <summary> Fotky </summary>
    <div class="p-2">
        <div class="row" style="align-items: center;">
            
        {% for image in recipe.images %}
        <div class="col-12 col-sm-6 col-md-4 pb-2">
            {{ render_image(image, with_delete=True, with_pin=True, style="border-radius:0.4rem") }}
        </div>
        {% endfor %}
        </div>
        
    {% if recipe.can_current_user_edit %}


        {{ dropzone.create(action=url_for('EditRecipeView:upload_photo', recipe_id=recipe.id)) }}
        {{ dropzone.config() }}
        {{ dropzone.config(redirect_url=url_for('RecipesView:show', id=recipe.id), default_message="Přetáhni fotku nebo klikni pro výběr.") }}.

        {# {{ button_to(url_for('EditRecipeView:delete_all_photos', recipe_id=recipe.id), class="btn btn-danger", value='Smazat všechny soubory') }} #}


    {% endif %}
    </div>
</details>