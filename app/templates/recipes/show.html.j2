{% extends "base/base.html.j2" %}
{% block title %} {{ texts.recipe }} {% endblock %}

{% block content %}

<div class="row">  
    <div class="col-md-10 col-sm-12">
        {% include("recipes/_show.html.j2") %} 
    </div>

    {% if not print %}
    <div class="col-md-2 col-sm-12 border-start">
        {% include("recipes/_sidebar_details.html.j2") %}
                    {% if recipe.images|length == 0 and recipe.can_current_user_edit %}
                <form {{ admin_field_class(obj=recipe) }} action="{{ url_for('EditRecipeView:upload_photo', id=recipe.id) }}" method="post" accept-charset="utf-8" enctype=multipart/form-data>
                    {{ photo_form.file }}
                    {{ photo_form.submit(class="btn btn-secondary") }}
                </form>         
            {% endif %}
    </div>
    {% endif %}
</div>

{% if not print %}
<hr>
<div>
    {% include("recipes/_interactions.html.j2") %} 
</div>
{% endif %}

{% endblock %}

