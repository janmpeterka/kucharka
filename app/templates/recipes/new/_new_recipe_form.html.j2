<form action="{{ url_for('RecipesView:post') }}" class="form" method="post" accept-charset="utf-8">
    {{ form.csrf_token }}
    <div class="w-100">
    {{ render_field(form.name, has_label=False, class="col-6") }}
    </div>

    <div class="w-100 mt-2 mb-2">
    {{ render_field(form.category, has_label=False, class="col") }}                            
    </div>

    <div class="w-100 mt-2 mb-2">
    {{ render_field(form.portion_count, has_label=False, class="col") }}                            
	</div>

    <input type="submit" value="{{ texts.recipe_new }}" class="btn btn-warning">
</form>
