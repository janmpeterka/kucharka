{% from "macros/icons.html.j2" import icon %}

<div class="col">
    <label for="recipes"><h3>{{ texts.recipe_list }}</h3></label>

    <turbo-frame id="recipes">
    <ul>
    {% for recipe in recipes %}
        <li>{{ link_to(recipe) }}
            {% if recipe.is_shared %} {{ icon("shared") }} {% endif %}
        </li>
    {% endfor %}
    </ul>
    </turbo-frame>

    {% if current_user.is_admin and all_recipes %}
    <div class="admin-field">
	    <label><h3>VÅ¡echny recepty</h3></label>

        <turbo-frame id="all-recipes">
	    <ul>
	        {% for recipe in all_recipes %}
	            <li>{{ link_to(recipe) }}
                    {% if not recipe.is_current_user_author %} ({{ recipe.author.name }}) {% elif recipe.is_shared %} {{ icon("shared") }} {% endif %}
                </li>
	        {% endfor %}
	    </ul>
        </turbo-frame>

    </div>
    {% endif %}
</div>
