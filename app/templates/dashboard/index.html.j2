{% extends "base/base.html.j2" %}
{% block title %} Vítejte {{ current_user.email }} {% endblock %}

{% block links %}
    {{ super() }}
    {{ turbo() }}
{% endblock %}

{% block content %}


<h1 class="mb-3 font-comfortaa text-uppercase text-center"> Vítejte! </h1>

<hr>
        
<div class="row mb-5">
    <div class="col-12 col-md-4 text-center mb-1 mb-md-0">
        <div class="container bg-color-secondary p-3" style="border-radius: 1rem;">
        {% if current_user.closest_future_event %}
            Podívejte se na svou nejbližší akci - {{ link_to(current_user.closest_future_event) }}
        {% else %}
            Založte <a href="{{url_for('EventsView:new')}}"> novou událost </a>
        {% endif %}
        </div>
    </div>

    <div class="col-12 col-md-4 text-center mb-1 mb-md-0">
        <div class="container bg-color-secondary p-3" style="border-radius: 1rem;">
        Inspirujte se v <a href="{{ url_for('PublicRecipesView:index') }}"> databázi receptů </a>
        </div>
    </div>
    
    <div class="col-12 col-md-4 text-center mb-1 mb-md-0">
        <div class="container bg-color-secondary p-3" style="border-radius: 1rem;">
        Přidejte <a href="{{url_for('RecipesView:new')}}"> nový recept </a>
        </div>
    </div>
</div>    

<h2 class="font-comfortaa text-uppercase text-center"> K vyřešení </h2>
<hr>

<div class="row mt-4 text-center" id="tasks" style="border-radius: 1.5rem;">

    <turbo-frame id="tasks" src="{{ url_for('DashboardView:tasks') }}" loading="lazy" class="row">
        {{ loader() }}
    </turbo-frame>

</div>

{% endblock %}
