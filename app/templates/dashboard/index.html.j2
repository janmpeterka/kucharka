{% extends "base/base.html.j2" %}
{% block title %} Vítejte {{ current_user.email }} {% endblock %}

{% block links %}
    {{ super() }}
    {{ turbo() }}
{% endblock %}

{% block content %}

<div class="row" id="welcome">
    <div class="text-center bg-color-light-green p-3 border-color-dark-green" style="border-radius: 1.5rem;">
        <h3 class="mb-3"> Vítejte! </h3>
        <hr>
        <div class="row">
            <div class="col-12 col-md-4 mb-3">
                Podívejte se na svou nejbližší akci - {{ link_to(current_user.closest_event) }}
            </div>
            <div class="col-12 col-md-4 mb-3">
                Inspirujte se v <a href="{{ url_for('PublicRecipesView:index') }}"> databázi receptů </a>
            </div>
            <div class="col-12 col-md-4 mb-3">
                Přidejte <a href="{{url_for('RecipesView:new')}}"> nový recept </a>
            </div>
        </div>    
    </div>
</div>

<div class="row mt-4 text-center bg-color-light-green p-3" id="current" style="border-radius: 1.5rem;">
    <h5> Aktuální </h5>
    <hr>
    <turbo-frame id="current" src="{{ url_for('DashboardView:current') }}" loading="lazy" class="row">
        {{ loader() }}
    </turbo-frame>
</div>

<div class="row mt-4 text-center bg-color-light-green p-3" id="tasks" style="border-radius: 1.5rem;">
    <h5> K vyřešení </h5>
    <hr>

    {% if not current_user.full_name %}
        <a href="{{ url_for('UsersView:edit') }}" class="text-uppercase font-comfortaa"> Přidat uživatelské jméno</a>
    {% endif %}

    <turbo-frame id="tasks" src="{{ url_for('DashboardView:tasks') }}" loading="lazy" class="row">
        {{ loader() }}
    </turbo-frame>

</div>

{% endblock %}
