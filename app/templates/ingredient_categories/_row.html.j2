{% from "macros/turbo.html.j2" import button_to %}

<tr id="ingredient-category-{{ category.id }}">
  <td> {{ category.name }} </td>
  <td> {{ category.description | default("", True)}} </td>
  <td> {% if category.is_lasting %}
      <span class="select-badge lh-3 ms-1 me-1 p-2 bg-color-secondary rounded-pill text-nobreak"> trvanliv√°</span>
      {% endif %}
  </td>
  <td> {{ category.count }} </td>

  <td colspan="3" class="text-end me-3">
    {% if editing %}{% set form_class="visibility-hidden"%}{% endif %}
      {{ button_to(url_for('IngredientCategorieView:show_edit', id=category.id), form_class=form_class, value="upravit", class="btn bg-color-secondary-action color-white hover-animate-fadein") }}
  </td>
</tr>