{% block content %}

<h2>Suroviny (pro {{ event.people_count }} lid√≠)</h2>
<ul>
    {% for ingredient in ingredients %}
    	<li>
    		<details>
    			<summary class="row">
        			<span class="col font-weight-bold">{{ ingredient.name }}</span>
                	<span class="col font-weight-bold">{{ ingredient.amount | int }}</span>
                	<span class="col font-weight-bold">{{ ingredient.measurement.name }}</span>
    			</summary>

		    	{% for recipe in ingredient.event_recipes %}
                    <li class="row"> 
                        <span class="col"> {{ link_to(recipe) }} </span>
                        <span class="col"> {{ amounts[ingredient.id]["recipes"][recipe.id]["amount"] | int }} </span>
                        <span class="col"> {{ ingredient.measurement.name }} </span>
                    </li>
		    	{% endfor %}
    		</details>
    	</li>
    {% endfor %}
</ul>

