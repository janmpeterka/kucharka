<details class="mt-2 mb-3" {% if form.errors %} open {% endif %}>
<summary>Nutriční hodnoty</summary>
<table class="table">
    <tr>
        <th>{{ texts.energy_100 }}</th>
        <th>{{ texts.protein_100 }}</th>
        <th>{{ texts.fat_100 }}</th>
        <th>{{ texts.sugar_100 }}</th>
    </tr>
    <tr>
        <td> {{ render_field(form.calorie, has_label=False) }} </td>
        <td> {{ render_field(form.protein, has_label=False) }} </td>
        <td> {{ render_field(form.fat, has_label=False) }} </td>
        <td> {{ render_field(form.sugar, has_label=False) }} </td>
    </tr>
</table>
</details>