{% from "macros/render_field.html.j2" import render_field, render_floating_field %} 
{% from "macros/turbo.html.j2" import button_to %} 

<div id="add-ingredient-simple" class="row mt-2">
    <hr>

    <div class="col-7">
        <form method="post" action="{{ url_for('FastAddIngredientView:post', recipe_id=recipe.id) }}" class="row row-cols-lg-auto g-3 align-items-center" accept-charset="UTF-8" data-turbo-frame="recipe-{{recipe.id}}-ingredients">
            {{ form.csrf_token }}
            <div class="col-12">{{ render_floating_field(form.name) }}</div>
            <div class="col-12">{{ render_floating_field(form.measurement) }}</div>
            <div class="col-12">{{ render_field(form.submit, value="uložit a přidat") }}</div>
        </form>
    </div>

    <div class="col-5 mt-2 text-end">
        <a class="btn color-white bg-color-secondary-action" href="{{ url_for('RecipeView:edit', id=recipe.id) }}"> zrušit</a>
    </div>
</div>
