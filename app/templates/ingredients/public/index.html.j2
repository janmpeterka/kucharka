{% extends "base/base.html.j2" %}
{% block title %} Veřejné suroviny {% endblock %}

{% block links %}
	{{ super() }}
	{{ turbo() }}
{% endblock %}


{% block content %}

<div class="text-center">
	<h1 class="text-uppercase font-comfortaa"> Veřejné suroviny </h1>
</div>

<table id="public_ingredients" class="table">
	<thead>
		<th> Surovina </th>
	    <th> Míra </th>
	    <th> Kategorie </th>
		<th> Vytvořil*a </th>
	    <th> Upravit </th>
	</thead>
	<tbody>
    {% for ingredient in public_ingredients %}
    	{% if edit_id and ingredient.id == edit_id |int %}
    		{% set editing=True %}
    	{% else %}
    		{% set editing=False %}
    	{% endif %}

		{% include "ingredients/public/_ingredient.html.j2" %}

    	{% if editing %}
    		{% include "ingredients/public/_edit.html.j2"%}
    	{% endif %}
	{% endfor %}
	</tbody>
</table>

{% endblock %}

