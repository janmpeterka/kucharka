{% extends "base/base.html.j2" %}
{% block title %} Moje suroviny	{% endblock %}

{% block meta %}
    <meta name="turbo-visit-control" content="reload">
{% endblock %}

{% block content %}

{% block style %}
    <link rel="stylesheet" href="https://unpkg.com/bootstrap-table@1.18.3/dist/bootstrap-table.min.css">
{% endblock %}

{% block script %}
    <script src="https://unpkg.com/bootstrap-table@1.18.3/dist/bootstrap-table.min.js"></script>
{% endblock %}

<div class="row">
    <div class="col">
        <h1 class="font-comfortaa"> moje suroviny </h1>
    </div>
    <div class="col">
        <a href="{{ url_for('IngredientsView:new') }}" class="btn bg-color-secondary-action color-white float-end"> {{ icon("add") }} surovinu
        </a>
    </div>
</div>

<hr>

<table id="ingredients" class="table"
        data-filter-control="true" data-toggle="table" data-search="true" data-pagination="true" data-sort-order="desc">

    <thead>
        <th data-field="name" data-sortable="true"> název </th>
        <th data-field="category" data-sortable="true"> kategorie </th>
        <th data-field="measurement" > míra </th>
    </thead>
    
    <tbody>
    {% for ingredient in ingredients: %}
        <tr>
            <td> {{ link_to(ingredient) }} </td>
            <td> {{ ingredient.category.name }} </td>
            <td> {{ ingredient.measurement.name }} </td>
        </tr>
    {% endfor %}
    </tbody>

</table>

{% endblock %}

