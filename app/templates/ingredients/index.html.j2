{% extends "base/base.html.j2" %}
{% block title %} Moje suroviny	{% endblock %}

{% block content %}

<h1>Moje suroviny
    <a href="{{ url_for('IngredientsView:new') }}">
        <button class="btn bg-color-secondary-action color-white float-end"> Přidat surovinu </button>
    </a>
</h1>

<table id="ingredients" class="table">
    <thead>
        <th> Název </th>
        <th> Kategorie </th>
        <th> Míra </th>
    </thead>
    <tbody>
    {% for ingredient in ingredients: %}
        <tr>
            <td> {{ link_to(ingredient) }} </td>
            <td> {{ ingredient.category.name }} </td>
            <td> {{ ingredient.measurement.name }} </td>
        </tr>
    {% endfor %}
    </tbody>
</table>

{% endblock %}

