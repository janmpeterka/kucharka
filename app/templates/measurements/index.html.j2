{% extends "base/base.html.j2" %}
{% block links %}
    {{ super() }}
    {{ turbo() }}
{% endblock %}
{% block title %}
    Measurements
{% endblock %}

{% block content %}
    <div class="container">
        <div class="col-12">
            <h1>V čem se dá počítat?</h1>

            <turbo-frame id="all">
              <ul class="measurement-list">
                <turbo-frame id="measurements">
                  {% for measurement in measurements %}
                    {% if measurement.id != edit_id %}
                      {% include 'measurements/_measurement.html.j2' %}
                    {% else %}
                      {% include 'measurements/_edit.html.j2' %}
                    {% endif %}
                  {% endfor %}
                </turbo-stream>
              </ul>


              <form method="POST" id="form">
                {% include 'measurements/_add.html.j2' %}
              </form>

            </turbo-frame>

        </div> 
    </div>
{% endblock %}

