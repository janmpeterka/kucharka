{% extends "base/base.html.j2" %}
{% block title %} Databáze receptů {% endblock %}

{% block links %}
    {{ super() }}
    {{ turbo() }}
{% endblock %}

{% block style %}
	<link href="https://unpkg.com/bootstrap-table@1.18.0/dist/bootstrap-table.min.css" rel="stylesheet">
{% endblock %}

{% block script %}
	<script src="https://unpkg.com/bootstrap-table@1.18.0/dist/bootstrap-table.min.js"></script>
  {{ stimulus("select2", "recipe-reaction") }}
{% endblock %}

{% block content %}

<form action="{{ url_for('PublicRecipesView:index') }}" method="post" class="form-inline form-control" accept-charset="UTF-8">
	{{ form.csrf_token }}
		<div class="col">
			<div class="mt-2 row">
				{{ form.ingredient.label(class_="ms-2") }}
				{{ render_field(form.ingredient, has_label=False, class="ms-3") }}
        {{ form.category.label(class_="ms-4") }}
        {{ render_field(form.category, has_label=False, class="ms-3") }}

        {{ render_field(form.with_reaction, class="ms-5", label=icon("heart_full", with_tooltip=True, tooltip="moje oblíbené")) }}
			</div>

      <hr>
      
      <div class="mt-2 ms-1 row">
        <div data-controller="enable-select2" class="col-10" style="display: inline">
            {# {{ form.labels.label(class_="ms-4") }} #}
            {{ render_field(form.labels, has_label=False, data_enable_select2_target="select", style="width:70%;") }}
        </div>
      </div>

      <hr>
      
      <div class="text-end">
        {{ form.submit(class_='btn btn-primary ms-3') }}
      </div>
		</div>
</form>

{% include "public_recipes/_recipes_table.html.j2"%}

{% endblock %}

