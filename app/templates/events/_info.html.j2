{% from "macros/icons.html.j2" import icon %}

<div id="event-info">
	<h1> {{ event.name }} </h1>
	<div>
		Od {{ human_format_date(event.date_from) }}
	</div>

	<div>
 		Do {{ human_format_date(event.date_to) }} ({{ event.duration }} dnů)
	</div>	
	
	<span> Pro {{ event.people_count }} lidí </span>

    {% if event.is_shared %}
        <span class="fst-italic font-weight-light float-end"> {{ icon("shared") }} </span>
    {% endif %}

    {% if event.can_current_user_edit %}
		<form method="POST" action="{{ url_for('EditEventView:edit', event_id=event.id) }}">
			<button type="submit" class="btn btn-warning"> Upravit {{ icon("edit") }} </button>
		</form>
    {% endif %}

</div>