<div class="row ms-1 mb-2">
    <div class="row">     
        <div class="col-12 col-md-2 mb-1">
            {% if not event.is_archived %}
                {% set archive_text = "Archivovat" + icon("archive") %}
            {% else %}
                {% set archive_text = "Aktivovat" + icon("unarchive") %}
            {% endif %}

            {{ button_to(url_for('EventsView:toggle_archived', id=event.id), class="btn btn-warning", value=archive_text) }}
        </div>
        
        <div class="col-12 col-md mb-1">  
            {{ button_to(url_for('EventsView:delete', id=event.id), class="btn btn-danger", value="Smazat akci " ~ icon("delete"), confirmation="Opravdu chcete smazat akci?") }}  
        </div>
    </div>
    
    <div class="row">
        <div class="col-12 col-md-2 mb-1">
            {% if event.is_shared %}
                {% set share_text = "Zneveřejnit" + icon("unshare") %}
            {% else %}
                {% set share_text = "Zveřejnit" + icon("share") %}
            {% endif %}

            {{ button_to(url_for('EventsView:toggle_shared', id=event.id), class="btn btn-secondary", value=share_text) }}
        </div>

        <div class="col-12 col-md mb-1">   
            {{ button_to(url_for('EventsView:share_all_used_recipes', id=event.id), class="btn btn-secondary", value="Zveřejnit všechny použité recepty"+ icon('share')) }}
        </div>
    </div>
</div>