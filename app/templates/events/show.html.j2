{% extends "base/base.html.j2" %}
{% block title %} Akce {% endblock %}
{% block content %}
<div class="mb-3">
	<h1> {{ event.name }} </h1>		
	<span> Od {{ human_format_date(event.date_from) }} do {{ human_format_date(event.date_to) }} ({{ event.duration }} dnů)<br></span>
	<span> Pro {{ event.people_count }} lidí</span>
</div>

<hr>
<div>
<ul>
    {% for day in event.daily_plans %}
        <li>{{ link_to(day) }}
            {% if day.daily_recipes %}
                ({{ day.daily_recipes | length }})
            {% endif %}
        </li>
    {% endfor %}
</ul>
</div>

{% include "events/_delete_or_edit.html.j2" %}
{% include "events/_export.html.j2" %}

{% endblock %}