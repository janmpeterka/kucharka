{% from "macros/render_field.html.j2" import render_field %}

<div id="event-info">
<form method="POST" action="{{ url_for('EditEventView:post', event_id=event.id) }}">
    {{ form.csrf_token }}

    {{ render_field(form.name) }}
	
	<div class="mt-2 mb-2">
	{{ render_field(form.date_from) }}
	{{ render_field(form.date_to) }}
	({{ event.duration }} dnů) </div>
    
	<span> Počet lidí</span>
	{{ render_field(form.people_count, has_label=False) }}

    {{ render_field(form.submit, value="Uložit změny") }}
</form>
</div>