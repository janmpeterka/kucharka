{% extends "base/base.html.j2" %}
{% block title %} nový úkol {% endblock %}

{% block content %}

<turbo-frame id="new-daily-plan-task">
<turbo-frame id="new-daily-plan-{{daily_plan.id}}-task" target="daily-plan-{{daily_plan.id}}-tasks">

<form action="{{ url_for('DailyPlanTaskView:post', daily_plan_id=daily_plan.id) }}" class="row row-cols-auto g-3 align-items-center" method="post"  accept-charset="UTF-8">
    {{ form.csrf_token }}
    <div class="col-12">
        {{ render_floating_field(form.name, class="mb-2", placeholder="např. Objednat pečivo") }}
    </div>
    <div class="col-6">
        {{ render_floating_field(form.description, class="mb-2", placeholder="např. Objednat pečivo z Jednoty ve Vrchlabí") }}
    </div>
    <div class="col-6">
        {{ render_field(form.submit) }}
        <a href="{{request.referrer}}" class="ms-2"> zrušit </a>
    </div>
</form>

</turbo-frame>
</turbo-frame>

{% endblock %}

