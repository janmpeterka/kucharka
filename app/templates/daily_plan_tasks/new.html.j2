{% extends "base/base.html.j2" %}
{% block title %} nový úkol {% endblock %}

{% block content %}

<form action="{{ url_for('DailyPlanTaskView:post', daily_plan_id=daily_plan.id) }}" class="form-group" method="post"  accept-charset="UTF-8">
    {{ form.csrf_token }}

    {{ render_floating_field(form.name, class="mb-2", placeholder="např. Objednat pečivo") }}
    {{ render_floating_field(form.description, class="mb-2", placeholder="např. Objednat pečivo z Jednoty ve Vrchlabí") }}

    {{ render_field(form.submit) }}

    <a href="{{request.referrer}}" class="ms-2"> zrušit </a>
</form>

{% endblock %}

